{
  "extends": "@vue/tsconfig/tsconfig.web.json",

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "shims/**/*.d.ts"
  ],

  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@composable/*": ["./src/composable/*"],
    }
  },

  "references": [
    { "path": "./tsconfig.config.json" }
  ]
}
