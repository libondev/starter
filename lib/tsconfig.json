{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "inlineSources": false,
    "isolatedModules": true,
    "lib": [
      "ESNext",
      "DOM",
    ],
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitHelpers": true,
    // 不包含任何错误的时候才能进行打包
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
  "include": [
    "src/**/*.ts",
    "vite.config.*",
    "env.d.ts"
  ]
}
